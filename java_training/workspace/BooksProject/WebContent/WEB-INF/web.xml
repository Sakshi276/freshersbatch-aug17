<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>BooksProject</display-name>
  
  <servlet>
  	<servlet-name>loginServlet</servlet-name>
  	<servlet-class>books.LoginServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>loginServlet</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>controller</servlet-name>
  	<servlet-class>books.ControllerServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>controller</servlet-name>
  	<url-pattern>/controller</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>computerBooksServlet</servlet-name>
  	<servlet-class>books.ComputerBooksServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>computerBooksServlet</servlet-name>
  	<url-pattern>/computerBooks</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>historyBooksServlet</servlet-name>
  	<servlet-class>books.HistoryBooksServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>historyBooksServlet</servlet-name>
  	<url-pattern>/historyBooks</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>shoppingCartServlet</servlet-name>
  	<servlet-class>books.ShoppingCartServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>shoppingCartServlet</servlet-name>
  	<url-pattern>/shoppingCart</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>logoutServlet</servlet-name>
  	<servlet-class>books.LogoutServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>logoutServlet</servlet-name>
  	<url-pattern>/logout</url-pattern>
  </servlet-mapping>
  
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
</web-app>